from pyfirmata import *
from time import *
def finger():
	port = ("/dev/ttyUSB0")

	pin = 12

	placa = Arduino(port)

	placa.digital[pin].mode = SERVO

	def rotateServo(pin, angle):
		placa.digital[pin].write(angle)
		sleep(0.015)
	print("pão")
	for i in range(0,100):
		rotateServo(pin, i)
	for i in range(180,1,-1):
		rotateServo(pin, i)
		print(i)
	print("cabou o pão")
	#while True:
finger()
